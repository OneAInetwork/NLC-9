# NLC9 Market Maker Bot Configuration
# All variables prefixed with NLC9_ for consistency

# ===========================================
# CORE CONFIGURATION
# ===========================================

SOLANA_RPC_URL = "https://api.mainnet-beta.solana.com"
WALLET_KEYPAIR_PATH = "./solana/main.json"
CORS_ORIGIN = "*"
DEFAULT_SLIPPAGE_BPS = "100" # 1%


# API server port
NLC9_PORT=3009
PORT2=3007

# Enable live trading (true) or simulation mode (false)
NLC9_EXECUTE_TRANSACTIONS=true

# ===========================================
# TOKEN CONFIGURATION
# ===========================================

# USDC mint address (Solana devnet default shown)
NLC9_USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Your token mint address
NLC9_MYTOKEN_MINT=8P4sBQQrAePwpxmDTeE7SKvzxSkxTe1FwdwfzevRfpaD

# Pool address (leave empty to auto-discover)
NLC9_POOL_ADDRESS=H7SXKFC8LxBFgduSx1vQQdE7JNqphzP1axF23G3xpoFj

# ===========================================
# MARKET MAKING PARAMETERS
# ===========================================

# Minimum order size in USD
NLC9_MIN_ORDER_USD=0.10

# Maximum order size in USD
NLC9_MAX_ORDER_USD=25

# Total volume target per side per cycle in USD
NLC9_TOTAL_VOLUME_USD=54

# Minimum number of orders per batch
NLC9_MIN_ORDERS=1

# Maximum number of orders per batch
NLC9_MAX_ORDERS=10

# Delay between orders in milliseconds
NLC9_ORDER_DELAY_MS=100

# Time between market making cycles in milliseconds (60000 = 1 minute)
NLC9_CYCLE_INTERVAL_MS=60000

# ===========================================
# PROFIT & REBALANCING CONFIGURATION
# ===========================================

# Target profit percentage per cycle (0.3 = 0.3% profit target)
NLC9_PROFIT_TARGET_PERCENT=0.3

# Ratio of profit to reinvest (0.7 = 70% reinvested, 30% kept as profit)
NLC9_PROFIT_REINVEST_RATIO=0.7

# Portfolio imbalance threshold to trigger rebalancing (0.15 = 15% imbalance)
NLC9_REBALANCE_THRESHOLD=0.15

# Maximum ratio of portfolio in one asset (0.6 = max 60% in USDC or tokens)
NLC9_MAX_POSITION_RATIO=0.6

# Number of cycles between profit checks and rebalancing
NLC9_PROFIT_CHECK_CYCLES=5

# Volume multiplier when profitable (1.5 = 50% more volume on profitable cycles)
NLC9_VOLUME_BOOST_ON_PROFIT=1.5

# ===========================================
# SPREAD & MARKET DYNAMICS
# ===========================================

# Minimum spread percentage for orders (0.1 = 0.1% minimum spread)
NLC9_MIN_SPREAD_PERCENT=0.1

# Enable adaptive spread based on volatility (true/false)
NLC9_ADAPTIVE_SPREAD=true

# Compound all profits back into capital (true) or take some profit out (false)
NLC9_COMPOUND_PROFITS=true

